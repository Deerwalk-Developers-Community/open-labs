---
interface Subject {
  name: string;
  hasLabWork: boolean;
}

export interface Props {
  subjects?: Subject[];
}

const { subjects } = Astro.props;
---

<div class="w-full h-full  rounded-md  ">
  <div class="">
    {subjects?.map((subject) => (
      <div class="flex items-center justify-between py-2 px-4">
        <div class="text-gray-700">{subject.name}</div>
        {subject.hasLabWork && (
          <a 
            href="#" 
            class="text-blue-600 underline text-indigo-800 font-semibold"
          >
            View Lab Work
          </a>
        )}
      </div>
    ))}
  </div>
</div>