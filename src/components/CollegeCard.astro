---
import { getCollection } from "astro:content";

const { id, name, affiliated_to } = Astro.props;
console.log(id, name);
---

<div
  class={`flex flex-col border border-gray-300 p-4 md:p-5 gap-10 md:gap-8 lg:gap-15 rounded-lg h-full shadow-sm hover:shadow-md transition-shadow ${name}`}
  id = {id}
>
  <div class="flex-1">
    <h3 class="font-bold text-lg md:text-xl mb-2">
      {name}
    </h3>
    <!-- <h4 class="font-semibold text-gray-700">Place</h4> -->
  </div>
  <div class="mt-4 lg:mt-6 flex flex-row justify-between items-center">
    <span
      class="bg-indigo-200 text-indigo-800 font-[500] border border-indigo-400 text-xs px-2 py-1 rounded-full"
      >5+ Courses</span
    >
    <a
      class="underline font-[700] text-xs md:text-sm text-indigo-800 hover:text-indigo-600 cursor-pointer"
      href=`/open-labs/courses/${id}`>View Courses</a
    >
  </div>
</div>
