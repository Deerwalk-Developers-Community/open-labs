---
export interface Props {
  question: string;
  answer: string;
  index: number;
}

const { question, answer, index } = Astro.props;
---

<div class="faq-item border  rounded-lg overflow-hidden shadow-sm">
  <button 
    class="faq-question w-full text-left p-5  transition-colors duration-200 flex justify-between items-center"
    data-faq={index}
  >
    <span class="text-black text-xl pr-4">{question}</span>
    <svg class="faq-icon min-w-8 h-8 bg-black rounded-full  text-white transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path  stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>
  <div class="faq-answer hidden">
    <div class="px-5 pb-5 leading-relaxed">
      {answer}
    </div>
  </div>
</div>