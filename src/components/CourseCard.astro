---
const { id, name ,college} = Astro.props;
console.log(college);
---

<div
  class="flex flex-col border border-gray-300 p-4 md:p-5 rounded-lg h-full shadow-sm hover:shadow-md transition-shadow"
>
  <div class="flex-1">
    <div class="flex flex-row justify-between">
      <h3 class="font-bold text-lg md:text-xl mb-2">
        {name}
      </h3>
      <h3 class="">
        {"Bachelors"}
      </h3>
    </div>
    <h4 class="font-semibold text-gray-700">{4} years/{8} Semesters</h4>
  </div>
  <div class="mt-4 lg:mt-6 flex flex-row justify-between items-center">
    <span
      class="bg-indigo-200 border border-indigo-400 text-xs px-2 py-1 rounded-full"
      >145 Subjects</span
    >
    <a
      class="underline text-xs md:text-sm text-indigo-800 hover:text-indigo-600 cursor-pointer"
      href=`/open-labs/subjects/${college}-${id}`>View Subjects</a
    >
  </div>
</div>
