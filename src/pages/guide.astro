---
import GeneralLayout from "#layouts/generalLayout.astro";
import OpenLabsLogo from "#sections/open-labs-logo.astro";
import GuideSection from '#sections/guide-section.astro'
import GuideSiderbar from "#components/guideSiderbar.astro";

export const sections = [
      {
        title: "Basic Syntax",
        items: [
          {
            id: "headers",
            name: "Headers",
            codeExample: 
 `# H1
  ## H2
  ### H3
  #### H4
  ##### H5
  ###### H6`
          },
          {
            id: "emphasis",
            name: "Emphasis",
            codeExample: `*Italic text* or _Italic text_
  **Bold text** or __Bold text__
  ***Bold and italic*** or ___Bold and italic___
  ~~Strikethrough~~`
          },
          {
            id: "lists",
            name: "Lists",
            subItems: [
              {
                name: "Unordered Lists",
                codeExample: `- First item
  - Second item
  - Third item
    - Indented item
    - Another indented item`
              },
              {
                name: "Ordered Lists",
                codeExample: `1. First item
  2. Second item
  3. Third item
     1. Indented item
     2. Another indented item`
              }
            ]
          },
          {
            id: "links-images",
            name: "Links and Images",
            codeExample: `[Link text](https://www.example.com)
  
  ![Alt text](image.jpg "Optional title")`
          },
          {
            id: "code",
            name: "Code",
            codeExample: "`Inline code`\n\n```\nCode block\n```"
          },
          {
            id: "blockquotes",
            name: "Blockquotes",
            codeExample: `> This is a blockquote
  > 
  > It can span multiple lines`
          },
          {
            id: "horizontal-rules",
            name: "Horizontal Rules",
            codeExample: `---
  or
  ***
  or
  ___`
          }
        ]
      },
      {
        title: "Extended Syntax",
        items: [
          {
            id: "tables",
            name: "Tables",
            codeExample: `| Header 1 | Header 2 |
  | -------- | -------- |
  | Cell 1   | Cell 2   |
  | Cell 3   | Cell 4   |`
          },
          {
            id: "task-lists",
            name: "Task Lists",
            codeExample: `- [x] Completed task
  - [ ] Incomplete task`
          },
          {
            id: "footnotes",
            name: "Footnotes",
            codeExample: `Here is a footnote reference[^1]
  
  [^1]: This is the footnote content.`
          },
          {
            id: "emoji",
            name: "Emoji",
            codeExample: `:smile: :heart: :+1:`
          },
          {
            id: "highlight",
            name: "Highlight",
            codeExample: `==Highlighted text==`
          }
        ]
      },
      {
  title: "Best Practices",
  items: [
    {
      id: "heading-structure",
      description: "Use consistent heading levels to maintain a clear structure."
    },
    {
      id: "readable-content",
      description: "Write plain, readable text before focusing on formatting."
    },
    {
      id: "list-usage",
      description: "Use bullet or numbered lists for better scannability."
    },
    {
      id: "descriptive-links",
      description: "Add links with descriptive text instead of raw URLs."
    },
    {
      id: "preview-markdown",
      description: "Preview your Markdown to catch formatting issues early."
    },
    {
      id: "consistency",
      description: "Use consistent formatting throughout your document."
    },
    {
      id: "readability",
      description: "Focus on making your markdown readable even in its raw form."
    }
  ]
},
{
  title: "Common Pitfalls",
  items: [
    {
      id: "inconsistent-headings",
      description: "Inconsistent use of headings breaks content hierarchy."
    },
    {
      id: "missing-blank-lines",
      description: "Forgetting to leave blank lines before/after lists or headings causes rendering issues."
    },
    {
      id: "overusing-emphasis",
      description: "Overusing emphasis (bold/italics) can reduce readability."
    },
    {
      id: "ignoring-line-breaks",
      description: "Ignoring line breaks can lead to walls of text."
    },
    {
      id: "unnecessary-html",
      description: "Using raw HTML unnecessarily complicates Markdown files."
    },
    {
      id: "spacing",
      description: "Remember to include proper spacing for list items and headers."
    },
    {
      id: "escaping",
      description: "Use backslash to escape special characters: \\*, \\_, \\`, etc."
    }
  ]
}
    ];

---

<GeneralLayout title={`Markdown Guide`}>
    <OpenLabsLogo />
    <h1 class=" md:text-2xl text-xl lg:text-3xl font-bold text-center mb-10 ">Complete Markdown Guide for Open Labs Nepal</h1>
    <div class="flex justify-between">
        <GuideSiderbar sections = {sections}/>
        <GuideSection sections = {sections}/>
    </div>
</GeneralLayout>