---
import OpenLabsLogo from "./open-labs-logo.astro";

---
<div class="flex flex-col justify-center items-center gap-5">
    <div>
        <OpenLabsLogo/>
    </div>
    <div class="flex flex-col justify-center items-center gap-2">

        <h1 class="font-bold text-2xl ">Select Your University</h1>
        <div class="flex flex-row  gap-2 items-center justify-center">
            <input type="text" required class="outline rounded-lg outline-zinc-400 p-1"/>
            <button class="bg-[#4338CA] text-white px-3 py-1  rounded-lg">Search</button>
        </div>
    </div>
    
</div>